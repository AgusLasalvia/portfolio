---
import planetIcon from '../../public/planet.svg'
import sunIcon from '../../public/sun.svg'
---
<header>
  <div class="navbar">
    <img src={planetIcon.src} alt="Planet Icon">
    <nav> 
      <a href="#about">About</a>
      <a href="#projects">Projects</a>
      <a href="#experience">Experience</a>
      <a href="#contact">Contact</a>
      <button id="theme-toggle">
      <img src={sunIcon.src} alt="">
      </button>

    </nav>
   </div>
</header>

<style>
  
  header{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  img{
    width: 70px;
    height: 67px;
  }
  
  .navbar{
    width: 100%;
    max-width: 1819px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 10px;
  }
  
  nav{
    display: flex;
    align-items: center;
    justify-content: center;

  }
  
  a{
    margin-left: 50px;
    font-weight: 400;
    text-decoration: none;
    color: black;
    font-style: bold;
  }

  #theme-toggle {
  background: none;
  border: none;
  cursor: pointer;
  /*display: flex;*/
  /*align-items: center;*/
  /*justify-content: center;*/
  padding: 0.5rem;
  border-radius: 50%;
  transition: background-color 0.3s;
  margin: 0 0 0 50px;
}

#theme-toggle:hover {
  background-color: rgba(0, 0, 0, 0.1);
}

#theme-toggle img {
  width: 24px;
  height: 20px;
}


</style>
