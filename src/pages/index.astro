---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

import Github from "../components/icons/Github.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Mail from "../components/icons/Mail.astro";

const projects = [
	{
		href: "https://quitelcongress-showcase.netlify.app/",
		codeHref: "https://github.com/AgusLasalvia/Congress-2023",
		title: "Quitel 2023",
		img: "/quitel.png",
		description:
			"XLVI International Congress of Theoretical Chemists of Latin Expression.",
		alt: "Quitel 2023",
	},
	{
		href: "https://sorvislater.netlify.app/login",
		codeHref: "https://github.com/AgusLasalvia/SorviceLater",
		title: "SorvisLater",
		img: "/sorvis.png",
		description:
			"Ticket solution based on ServiceNow but for Minecraft Servers",
		alt: "SorvisLater",
	},
];
---

<Layout>
	<section id="hero">
		<h1>
			Hi, I’m Agustín <br />
			<span>I’m a <strong>Web Developer</strong></span>

			<p>
				Focused mostly on <strong> Back-End</strong> development, I create scalable,
				client-focused services to deliver efficient and reliable solutions
			</p>
		</h1>
		<figure>
			<img src="/profile.jpg" alt="" />
		</figure>
	</section>

	<section id="about">
		<h2>About Me</h2>

		<p>
			I am currently pursuing a degree in Software Development, with a focus on
			backend development, as I enjoy challenges and problem-solving. However, I
			am also starting to explore the world of frontend development.
		</p>
		<p>
			I am a calm and team-oriented individual who loves collaborating,
			listening to different ideas and implementation plans to deliver a quality
			product to users, ensuring a unique experience.
		</p>
		<p>
			<strong>Some of the tools and technologies I work with include:</strong
			><br />JavaScript/TypeScript, MySQL, Node.js, CSS, HTML, C#, and Python.
		</p>

		<p>
			If you like my skills or want to talk,<br />check out my LinkedIn or send
			me an email
		</p>
		<ul>
			<a href="https://github.com/AgusLasalvia"><Github /></a>
			<a href="https://www.linkedin.com/in/agustin-lasalvia/"><LinkedIn /></a>
			<a href="mailto:agus.blumenfeld13@gmail.com"><Mail /></a>
		</ul>
	</section>

	<section id="projects">
		<h2>Projects</h2>
		<p>
			This are some of my latest projects. <br />
			<strong>Take a Look</strong>
		</p>
		<div>
			{
				projects.map((item) => {
					return <ProjectCard project={item} />;
				})
			}
		</div>
	</section>

	<footer>
		<p>Thanks for visiting</p>
	</footer>
</Layout>

<style>
	section {
		height: 90vh;
		width: 90%;
	}

	h2 {
		color: var(--orange);
		font-size: 48px;
	}

	p {
		font-size: 24px;
	}

	#hero {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	#hero h1,
	figure {
		width: 50%;
		display: flex;
		flex-direction: column;
	}

	#hero h1 {
		font-size: 60px;
		text-align: start;
		margin: 0 10px;
	}

	#hero p {
		margin-top: 30px;
		font-size: 24px !important;
	}

	#hero img {
		margin-left: 40px;
		width: 100%;
		border-radius: 100%;
	}

	#hero figure {
		align-items: center;
	}

	#hero span {
		width: 100%;
	}

	#hero strong {
		color: var(--orange);
	}

	#about p {
		margin-top: 50px;
	}

	#about ul {
		display: flex;
		align-items: center;
		justify-content: start;
		padding: 0;
		gap: 15px;
	}
	#about a {
		margin: 10px;
		margin-top: 30px;
		color: black;
		width: 50px;
		transition: color 0.5s;
	}

	#about a:hover {
		color: var(--orange);
	}
	#projects div {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 20px;
	}

	footer {
		width: 90%;
		background-color: var(--orange);
		border-radius: 10px 10px 0 0;
		text-align: center;
		height: 70px;
		color: white;
		margin-top: 20px;
	}

	footer p {
		font-size: 20px;
	}

	@media screen and (max-width: 904px) {
		section {
			width: 90%;
			height: fit-content;
		}
		p {
			font-size: 20px;
		}

		h2 {
			font-size: 27px;
		}
		#hero {
			justify-content: center;
			align-items: center;
			flex-direction: column-reverse;
		}
		#hero img {
			margin: 0;
			width: 190%;
		}

		#hero h1 {
			font-size: 30px;
			width: 100%;
		}
		#hero p {
			font-size: 20px !important;
		}

		#about ul {
			justify-content: space-around;
		}

		#projects div {
			flex-direction: column;
		}
	}
</style>
